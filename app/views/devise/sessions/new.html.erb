<div id="login-page" class="">
    <div class="card-panel" style="width: 50% !important; margin-left: 25% !important; background-color: #FBEFF5;" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form") do |f| %>
      <!--<form class="login-form">-->
        <div class="row">
          <div class="input-field col s12 center">
            <h5 class="indigo-text" style="color: #e91e63 !important" ><%= I18n.t('actions.log_in') %></h5>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-social-person-outline prefix"></i>
            <%= f.email_field :email, autofocus: true %>
            <%= f.label I18n.t('actions.email') %>
          </div>
        </div>
        <div class="row margin">
          <div class="input-field col s12">
            <i class="mdi-action-lock-outline prefix"></i>
            <%= f.password_field :password, autocomplete: "off" %>
            <%= f.label I18n.t('actions.password') %>
          </div>
        </div>
        <div class="row">          
          <div class="input-field col s12 m12 l12  login-text">
              <%= f.check_box :remember_me %>
              <%= f.label I18n.t('actions.remember_me') %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.submit I18n.t('actions.log_in'), class: "btn waves-effect waves-light pink" %>
          </div>
        </div>
        <!--<div class="row">
          <div class="input-field col s6 m6 l6">
            <p class="margin medium-small"><a href="page-register.html">Register Now!</a></p>
          </div>
          <div class="input-field col s6 m6 l6">
              <p class="margin right-align medium-small"><a href="page-forgot-password.html">Forgot password ?</a></p>
          </div>          
        </div>-->

      <% end %>
      <%# render "devise/shared/links" %>
    </div>
  </div>