<p id="notice"><%= notice %></p>

<h4 class="indigo-text" style="color: #e91e63 !important" ><%= I18n.t('models.departaments.title') %></h4>
<table>
  <thead>
    <tr>
      <th><%= I18n.t('attributes.departaments.nom_departament') %></th>
      <th><%= I18n.t('attributes.departaments.country_departament') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departaments.each do |departament| %>
      <tr>
        <td><%= departament.name %></td>
        <td><%= departament.country_id.blank? ? '' : departament.country.name %></td>
        <td><%= link_to I18n.t('actions.show'), departament %></td>
      </tr>
    <% end %>
    <tr>
      <td colspan="8" style="text-align: center;">
        <%= will_paginate @departaments %>
      </td>
    </tr>
  </tbody>
</table>