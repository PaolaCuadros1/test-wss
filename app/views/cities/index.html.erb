<p id="notice"><%= notice %></p>

<h4 class="indigo-text" style="color: #e91e63 !important" ><%= I18n.t('models.cities.title') %></h4>

<table>
  <thead>
    <tr>
      <th><%= I18n.t('attributes.cities.nom_city') %></th>
      <th><%= I18n.t('attributes.cities.dep_city') %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.depart_id.blank? ? '' : city.departament.name %></td>
        <td><%= link_to I18n.t('actions.show') , city %></td>
      </tr>
    <% end %>
    <tr>
        <td colspan="8" style="text-align: center;">
          <%= will_paginate @cities %>
        </td>
    </tr>
  </tbody>
</table>