<%= form_with(model: client, html: { class: 'form-horizontal form-label-left' }, local: true) do |form| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row" >
    <div class="field">
      <%= form.label :avatar, class: "validate" %>
      <%= form.file_field :avatar %>
    </div>
  </div>
  
  <div class="row">
    <div class="input-field col s6">
      <%= form.label :first_name, class: "validate" %>
      <%= form.text_field :first_name, class: 'validate', id: :client_first_name %>
    </div>
    <div class="input-field col s6">
      <%= form.label :last_name, class: "validate" %>
      <%= form.text_field :last_name, class: 'validate',id: :client_last_name %>
    </div>
  </div>
  
  <div class="row"> 
    <div class="col s12 m6">
      <%= form.label :type_id, class: "validate" %>
      <%= form.select :type_id, {
                                  "Adulto sin identificación" => "1", 
                                  "Cédula" => "2", 
                                  "Cédula extranjera" => "3", 
                                  "Menor sin identificación" => "4", 
                                  "Tarjeta de identificación" => "5", 
                                  "Pasaporte" => "6"}, {include_blank: false }, {:class => "browser-default"} %>
      
    </div>
    <div class="input-field col s6">
      <%= form.label :number_id, class: "validate" %>
      <%= form.text_field :number_id, class: "validate", id: :client_number_id %>
    </div>
  </div>
  
  <div class="row">

    <div class="row">
      <div class="col s12 m6">
        <%= form.label :gender %>
        <%= form.select :gender, {
                                  "Female" => "Female", 
                                  "Male" => "Male"}, {include_blank: false }, {:class => "browser-default"} %>
      </div>
    </div>
  </div>
  

  <div class="row" >
    <div class="col s12 m6">
      <%= form.label :country %><br />
      <%= form.select :country, Country.all.order_by(['name', 1]).map{|c| [c.name, c.country_id]}, {include_blank: false }, {:class => "browser-default"}  %>
    </div>
  
    <div class="col s12 m6">
      <%= form.label :departament %><br />
      <%= form.select :departament, Departament.all.order_by(['name', 1]).map{|c| [c.name, c.code]}, {include_blank: false }, {:class => "browser-default"}  %>
    </div>
  </div>
  
  
  <div class="field">
    <%= form.label :city %><br />
    <%= form.select :city, 
      City.where(depart_id: Departament.all.order_by(["name", 1]).first.code).order_by(['cap', 1], ['name', 1]).map{|c| [c.name, c.code]}, {include_blank: false }, {:class => "browser-default"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
